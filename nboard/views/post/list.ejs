<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="/stylesheets/post_list.css">
    <title>posts</title>
</head>
<body>
    <a href="/posts"><header>nBoard</header></a>
    <nav>
        <a href="/posts/new"><button>New</button></a>
        <div>
            <a href="/users/join"><button>Join</button></a>
            <a href="/users/login"><button>Login</button></a>
        </div>
    </nav>
    <table>
        <thead>
            <tr>
                <th width="50px">No.</th>
                <th width="500px">Title</th>
                <th width="150px">Date</th>
                <th width="100px">Author</th>
            </tr>
        </thead>
        <tbody>
            <% for (let i = 0; i < data.length; i++) { %>
                <tr>
                    <td><%= i + 1 %></td>
                    <td><a href="posts/detail/<%= data[i].id %>"><%= data[i].title %></a></td>
                    <td><%= data[i].createdAt %></td>
                    <td><%= data[i].author %></td>
                </tr>
            <% } %>
        </tbody>
    </table>
</body>
</html>